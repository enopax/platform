# Production Environment Configuration Template
# Copy this file to .env.production and fill in your actual values

# ==========================================
# DATABASE CONFIGURATION (Required)
# ==========================================
# PostgreSQL credentials - CHANGE THESE IN PRODUCTION!
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_strong_postgres_password_here
POSTGRES_DB=pinning

# Database connection string (uses variables above)
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?schema=public"

# ==========================================
# AUTHENTICATION (Required)
# ==========================================
# Generate with: openssl rand -base64 32
AUTH_SECRET="your_generated_auth_secret_here"

# Your production domain or server IP
# Examples: https://your-domain.com or http://your-server-ip:3000
AUTH_URL="https://your-domain.com"
AUTH_TRUST_HOST="true"

# ==========================================
# APPLICATION METADATA (Optional)
# ==========================================
NEXT_PUBLIC_META_DESC="Cloud hosting and storage platform"
NEXT_PUBLIC_OG_IMAGE=""
NEXT_PUBLIC_DISCORD_URL="https://discord.gg/your-invite"

# ==========================================
# PAYMENT INTEGRATIONS (Optional)
# ==========================================
# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_your_publishable_key"
STRIPE_SECRET_KEY="sk_live_your_secret_key"

# PayPal
NEXT_PUBLIC_PAYPAL_CLIENT_ID="your_paypal_client_id"
PAYPAL_CLIENT_SECRET="your_paypal_client_secret"

# ==========================================
# EMAIL CONFIGURATION (Optional)
# ==========================================
# Format: smtp://username:password@host:port
EMAIL_SERVER="smtp://user@example.com:password@mail.example.com:587"
EMAIL_FROM="noreply@your-domain.com"