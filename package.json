{
  "name": "enopax-platform",
  "version": "0.4.1",
  "private": true,
  "scripts": {
    "postinstall": "prisma generate && prisma db push",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --config jest.config.unified.js",
    "test:watch": "jest --config jest.config.unified.js --watch",
    "test:coverage": "jest --config jest.config.unified.js --coverage",
    "test:unit": "jest --config jest.config.unified.js --selectProjects unit",
    "test:integration": "jest --config jest.config.unified.js --selectProjects integration",
    "test:validation": "jest --config jest.config.unified.js --selectProjects validation",
    "test:actions": "jest --config jest.config.unified.js --selectProjects actions",
    "test:services": "jest --config jest.config.unified.js --selectProjects services",
    "test:api": "jest --config jest.config.unified.js --selectProjects api",
    "test:components": "jest --config jest.config.unified.js --selectProjects components",
    "test:tinybase": "jest --config jest.config.unified.js --testPathPatterns=tinybase",
    "docker:dev:up": "docker compose up -d",
    "docker:dev:down": "docker compose down",
    "docker:prod": "docker compose -f docker-compose.prod.yml up -d --build",
    "docker:prod:stop": "docker compose -f docker-compose.prod.yml down",
    "docker:prod:rebuild": "docker compose -f docker-compose.prod.yml up -d --build --no-cache nextjs-app",
    "docker:prod:logs": "docker compose -f docker-compose.prod.yml logs -f nextjs-app",
    "docker:logs": "docker compose logs -f"
  },
